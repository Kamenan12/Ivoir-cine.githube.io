<h1 class="current_category"><%= params[:category] %></h1>

<% if @plays.count == 0 %>
  <h3>Vous n'avez pas de Play dans cette categorie</h3>
<% else %>
  <div class="row">
    <% @plays.each do |play| %>
      <div class="col-md-3">
        <a href="/plays/ <%= play.id %>">
          <%= image_tag play.play_img.url(:play_index), class: "play" %>
        </a>
      </div>
    <% end %>
  </div>
<% end %>
