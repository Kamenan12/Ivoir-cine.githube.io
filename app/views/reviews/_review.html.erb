<div class="review">
  <div class="review-rating" data-score="<%= review.rating %>"></div>
  <p class="review-comment"><%= review.comment %></p>

  <% if user_signed_in? %>
    <% if review.user_id == current_user.id %>
      <div class="links btn-group">
        <%= link_to "Edite", edit_play_review_path(review.play, review), class: "btn btn-custom" %>
        <%= link_to "Supprimer", play_review_path(review.play, review), method: :delete, data: {confirm: "Etre vous sure?"}, class: "btn btn-custom" %>
      </div>
    <% end %>
  <% end %>
</div>
